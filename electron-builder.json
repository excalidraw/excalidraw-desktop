{
  "appId": "com.excalidraw.Excalidraw",
  "productName": "Excalidraw Desktop",
  "directories": {
    "output": "dist"
  },
  "files": ["package.json", "./dist/main.js", "build/icon.*"],
  "win": {
    "target": [
      {
        "target": "zip",
        "arch": ["x64", "ia32"]
      }
    ]
  },
  "linux": {
    "category": "Development",
    "target": [
      {
        "target": "tar.gz",
        "arch": ["x64", "ia32"]
      }
    ]
  },
  "mac": {
    "hardenedRuntime": true,
    "target": "dmg"
  },
  "fileAssociations": [
    {
      "ext": "excalidraw",
      "name": "Excalidraw",
      "description": "Excalidraw file",
      "role": "Editor",
      "mimeType": "application/json"
    }
  ]
}

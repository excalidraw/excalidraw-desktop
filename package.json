{
  "author": "Excalidraw Team",
  "description": "Excalidraw Desktop",
  "devDependencies": {
    "@types/node": "12",
    "@typescript-eslint/eslint-plugin": "2.22.0",
    "@typescript-eslint/parser": "2.22.0",
    "asar": "2.1.0",
    "electron": "8.0.3",
    "electron-builder": "22.4.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-prettier": "3.1.2",
    "execa": "4.0.0",
    "husky": "4.2.3",
    "lint-staged": "10.0.8",
    "mocha": "7.1.0",
    "mri": "1.1.4",
    "npm-run-all": "4.1.5",
    "prettier": "1.19.1",
    "spectron": "10.0.1",
    "typescript": "3.8.3"
  },
  "main": "dist/main.js",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,md,yml}": [
      "prettier --write"
    ],
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "name": "excalidraw-desktop",
  "scripts": {
    "build": "run-s download build:app build:dist",
    "build:app": "tsc",
    "build:dist": "node ./tasks/dist.js",
    "download": "node ./tasks/download.js",
    "fix": "run-s fix:other fix:code",
    "fix:code": "yarn test:code --fix",
    "fix:other": "yarn prettier --write",
    "prettier": "prettier \"**/*.{json,md,yml}\"",
    "preinstall": "npx mkdirp dist",
    "postinstall": "run-s download",
    "start": "yarn build:app && electron ./dist/main.js",
    "test": "run-s build:app test:other test:code test:unit",
    "test:unit": "mocha --exit",
    "test:code": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx .",
    "test:other": "yarn prettier --list-different",
    "watch": "tsc -w"
  },
  "version": "0.0.1"
}
